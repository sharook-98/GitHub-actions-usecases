pipeline {
    agent any

    environment {
        AWS_REGION = 'us-east-1'  // Set the region
        INSTANCE_ID = 'i-042a33b9af6b32067'  // EC2 instance ID
        SSH_KEY_PATH = 'pem/test.pem'  // SSH private key path
        SSH_USER = 'ubuntu'  // Ubuntu default user
        EC2_PUBLIC_IP = '54.145.239.52'  // EC2 instance public IP
    }

    stages {
        stage('Restart EC2 Instance') {
            steps {
                script {
                    
                    
                    
                    withAWS(credentials: 'aws-credentials', region: AWS_REGION) {
                        // Option 1: Restart EC2 instance using AWS CLI
                        sh "aws ec2 reboot-instances --instance-ids ${INSTANCE_ID} --region ${AWS_REGION}"
                    }
                }
            }
        }
    }
}

