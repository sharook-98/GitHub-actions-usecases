pipeline {
    agent any

    environment {
        AWS_REGION = 'us-east-1'  // Set the region
        INSTANCE_ID = 'i-042a33b9af6b32067'  // EC2 instance ID
        SSH_KEY_PATH = 'pem/test.pem'  // SSH private key path
        SSH_USER = 'ubuntu'  // Ubuntu default user
        EC2_PUBLIC_IP = '100.25.199.250'  // EC2 instance public IP
    }

    stages {
        stage('Restart EC2 Instance') {
            steps {
                script {
                    
                    
                    
                  

                     // Option 2: Restart EC2 instance via SSH (If you prefer SSH method)
                        sshagent(['ssh']) {
                            sh """
                                ssh -o StrictHostKeyChecking=no -i ${SSH_KEY_PATH} ${SSH_USER}@${EC2_PUBLIC_IP} 'echo "Heloweeeeeeeeeee" > dummy.txt'
                            """
                    }
                }
            }
        }
    }
}

